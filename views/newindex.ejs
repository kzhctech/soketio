

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="static/index.css">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
  <title>Ball2Ball || Live Cricket</title>
</head>
<body class="bg-light" > 

   <div class="container">
    <div class="text-center mb-3"><div class="row"><div class="col-sm-12 col-md-6 col-lg-4">
<img src="static/logo.png" width="100%" >
</div></div></div>


<h4>Match</h4>
	<div class="row justify-content-center ">

<div class="col-lg-4 col-md-6">
<div class="card bg-white mb-3" style="width: 100%;">
<a href="/live" class="match">
	       <div class="card-header"><%= Title %></div>
	         <div class="card-body">
 			<div class="row">
			  <div class="col-6">
			   <img width="40px" src=""> <%= BatName %>
			  </div>
			  <div class="col-6 text-right">
			   <%= BatRun %>
			  </div>
			</div>
 			<div class="row mt-2">
			  <div class="col-6">
			   <img width="40px" src=""> <%= BowlName %>
			  </div>
			  <div class="col-6 text-right">
			  <%= BowlRun %>
			  </div>
			</div>
			<h6 class="text-primary mt-2"><%= Status %><h6>

	         </div>
    </a></div>
</div>

<%matchList.forEach(match => {%>

<div class="col-lg-4 col-md-6">
<div class="card bg-white mb-3" style="width: 100%;">
<a href="match/<%= match._id %>" class="match">
	       <div class="card-header"><%= match.name %></div>
	         <div class="card-body">
 			<div class="row">
			  <div class="col-6">
			   <%= match.team1name %>
			  </div>
			  <div class="col-6 text-right">
			   <%= match.team1run %>
			  </div>
			</div>
 			<div class="row mt-2">
			  <div class="col-6">
			   <%= match.team2name %>
			  </div>
			  <div class="col-6 text-right">
			   <%= match.team2run %>
			  </div>
			</div>
			<h6 class="text-primary mt-2"><%= match.status %><h6>

	         </div>
    </a></div>
</div>





 <%})%>

   </div>


<h4>News</h4>

	<div class="row justify-content-center">

		<%newslist.forEach(news => {%>
			<div class="col-md-4 mb-4">
				<img src="<%= news.thumb %>" width="100%" alt="" srcset="">
				<div class="py-3 bg-white px-3">
				<h4><%= news.title %></h4>
				<h6>By <%= news.author %></h6>
				<a href="news/<%= news._id %>">Read More</a>
				</div>
				
			</div>
			
		<%})%>
			

	</div>


  </div>
</body>
</html>
